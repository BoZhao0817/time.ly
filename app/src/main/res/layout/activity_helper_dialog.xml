<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:minWidth="300dp">

    <TextView
        android:id="@+id/helper_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Delete Title"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/lightMainText"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/helper_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detail"
        android:textColor="@color/lightMainText"
        android:layout_marginBottom="10dp"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">
        <Button
            android:id="@+id/helper_dialog_dismiss"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lightButtonText"
            android:text="DISMISS"/>
    </LinearLayout>
</LinearLayout>