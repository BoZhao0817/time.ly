<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backDrop"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainBackdropIndividualView">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Recording"
        android:textColor="@color/darkMainText"
        android:textSize="18sp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00:00"
            android:textColor="@color/darkMainText"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/backDrop"
            android:src="@drawable/icon_play_orange" />

        <TextView
            android:id="@+id/report_backdrop_presentation_individual_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="04:20"
            android:textColor="@color/darkMainText"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Your Estimated Time vs. Actual Time"
        android:textColor="@color/darkMainText"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/estimateChart"
            android:layout_width="250dp"
            android:layout_height="20dp"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:id="@+id/estimateTime"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="00:00"
            android:textColor="@color/darkMainText"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/actualChart"
            android:layout_width="250dp"
            android:layout_height="20dp"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:id="@+id/actualTime"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="00:00"
            android:textColor="@color/darkMainText"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>

