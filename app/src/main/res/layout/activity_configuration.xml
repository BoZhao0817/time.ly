<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/layout1"
        >
        <TextView
            android:id="@+id/presentation_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="For CS"
            />
        <TextView
            android:id="@+id/total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/presentation_name"
            android:layout_alignParentRight="true"
            android:text="5:00"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginRight="10dp"
            android:gravity="right"
            />
        <TextView
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/presentation_name"
            android:textColor="#909090"
            android:text="You can only configure your own portion in group presentation"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout2"
        android:layout_below="@id/layout1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/white"
        android:paddingBottom="25dp"
        android:paddingTop="15dp"
        android:paddingLeft="17dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sections_glance"
            android:text="Sections at Glance"
            android:textColor="#000000"
            android:textSize="15dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="6dp"
            android:id="@+id/ll1"
            android:orientation="horizontal"
            android:layout_below="@+id/sections_glance"
            />
        <TextView
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sections_glance"
            android:textColor="#909090"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:text="There are no sections for current presentation"
        />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout2"
        android:id="@+id/layout3"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/white"
        android:paddingLeft="17dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sections"
            android:id="@+id/section_details"
            android:textColor="#000000"
            android:textSize="15dp"
            />
        <TextView
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/section_details"
            android:textColor="#909090"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:text="There are no sections for current presentation"
            />
        <ListView
            android:layout_below="@+id/section_details"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:dividerHeight="0dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_new_section"
            android:text="ADD NEW SECTION"
            android:textColor="#F68928"
            android:textStyle="bold"
            android:layout_below="@+id/listview"
            android:layout_toLeftOf="@+id/add_section"
            />
        <Button
            android:id="@+id/add_section"
            android:background="@drawable/icon_add_outline"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_below="@+id/listview"
            android:layout_alignRight="@id/listview"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/add_new_section"
            android:layout_alignBottom="@+id/add_new_section"/>
    </RelativeLayout>
</LinearLayout>