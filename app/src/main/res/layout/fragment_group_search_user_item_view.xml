<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/search_user_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/icon_person_outline_orange"/>

    <TextView
        android:id="@+id/search_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginEnd="20dp"
        android:text="Emma"
        android:textColor="@color/lightMainText"
        android:fontFamily="sans-serif-medium"/>

    <RadioButton
        android:id="@+id/search_check_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/lightButtonText"
        android:checked="false"/>
</LinearLayout>