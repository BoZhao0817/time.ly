<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backDrop"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="20dp"
    tools:context=".MainBackdropIndividualView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="40dp"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_backdrop_presentation_individual_duration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="10:00"
            android:textColor="@color/darkMainText"
            android:textSize="60sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <GridLayout
            android:id="@+id/main_individual_start_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowSpan="2"
                android:layout_column="0"
                android:layout_columnWeight="0"
                android:layout_gravity="fill_vertical"
                android:layout_marginRight="20dp"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:src="@drawable/icon_play_circle_outline" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:fontFamily="sans-serif-medium"
                android:text="Start Presentation"
                android:textColor="@color/darkButtonText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:text="Start the presentation"
                android:textColor="@color/darkHelperText"
                android:textSize="12sp" />
        </GridLayout>

        <GridLayout
            android:id="@+id/main_individual_practice_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:columnCount="2"
            android:rowCount="2"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowSpan="2"
                android:layout_column="0"
                android:layout_columnWeight="0"
                android:layout_gravity="fill_vertical"
                android:layout_marginRight="20dp"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:src="@drawable/icon_donut" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:fontFamily="sans-serif-medium"
                android:text="Practice"
                android:textColor="@color/darkButtonText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:text="Practice with the presentation"
                android:textColor="@color/darkHelperText"
                android:textSize="12sp" />
        </GridLayout>

        <GridLayout
            android:id="@+id/main_individual_settings_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:columnCount="2"
            android:focusable="true"
            android:rowCount="2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowSpan="2"
                android:layout_column="0"
                android:layout_columnWeight="0"
                android:layout_gravity="fill_vertical"
                android:layout_marginRight="20dp"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:src="@drawable/icon_vibration" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:fontFamily="sans-serif-medium"
                android:text="Settings"
                android:textColor="@color/darkButtonText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:text="View and add sections and customized vibrations"
                android:textColor="@color/darkHelperText"
                android:textSize="12sp" />
        </GridLayout>

        <GridLayout
            android:id="@+id/main_individual_share_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            android:columnCount="2"
            android:rowCount="2"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowSpan="2"
                android:layout_column="0"
                android:layout_columnWeight="0"
                android:layout_gravity="fill_vertical"
                android:layout_marginRight="20dp"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:src="@drawable/icon_share" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:fontFamily="sans-serif-medium"
                android:text="Share"
                android:textColor="@color/darkButtonText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:text="Convert current presentation to group presentation"
                android:textColor="@color/darkHelperText"
                android:textSize="12sp" />
        </GridLayout>

    </LinearLayout>

</LinearLayout>

