<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/invitell"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".InviteActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card465"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emma has invited you to the presentation:"
            android:textColor="@color/lightMainText"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/lightMainText"
            android:text="&quot;CS465 Final&quot;"/>

        <Button
            android:id="@+id/cancel465"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:text="CANCEL"
            android:textColor="#d6564f"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="260dp"
            android:background="#fff"
            />
        <Button
            android:id="@+id/accept465"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:text="ACCEPT"
            android:textColor="#4f97d6"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="170dp"
            android:background="#fff"
            />
    </androidx.cardview.widget.CardView>

