<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainBackdropLargeIndividualView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/backDrop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="top"
            android:layout_weight="1"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10:00"
                android:fontFamily="sans-serif-medium"
                android:textSize="60sp"
                android:textColor="@color/darkMainText"/>

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="0"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingBottom="0dp"
                android:text="DELETE"
                android:textColor="@color/darkWarningText"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="2">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_columnWeight="0"
                    android:layout_rowSpan="2"
                    android:layout_gravity="fill_vertical"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:src="@drawable/icon_play_circle_outline"
                    android:layout_marginRight="20dp"/>

                <TextView
                    android:id="@+id/startText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal"
                    android:fontFamily="sans-serif-medium"
                    android:text="Start Presentation"
                    android:textColor="@color/darkButtonText" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal"
                    android:text="Start the presentation"
                    android:textColor="@color/darkHelperText"
                    android:textSize="10sp"/>
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="2"
                android:layout_marginTop="30dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_columnWeight="0"
                    android:layout_rowSpan="2"
                    android:layout_gravity="fill_vertical"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:src="@drawable/icon_donut"
                    android:layout_marginRight="20dp"/>

                <TextView
                    android:id="@+id/practiceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal"
                    android:fontFamily="sans-serif-medium"
                    android:text="Practice"
                    android:textColor="@color/darkButtonText" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal"
                    android:text="Practice with the presentation"
                    android:textColor="@color/darkHelperText"
                    android:textSize="10sp"/>
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="2"
                android:layout_marginTop="30dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_columnWeight="0"
                    android:layout_rowSpan="2"
                    android:layout_gravity="fill_vertical"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:src="@drawable/icon_vibration"
                    android:layout_marginRight="20dp"/>

                <TextView
                    android:id="@+id/settingsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal"
                    android:fontFamily="sans-serif-medium"
                    android:text="Settings"
                    android:textColor="@color/darkButtonText" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal"
                    android:text="View and add sections and customized vibrations"
                    android:textColor="@color/darkHelperText"
                    android:textSize="10sp"/>
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="2"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_columnWeight="0"
                    android:layout_rowSpan="2"
                    android:layout_gravity="fill_vertical"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:src="@drawable/icon_share"
                    android:layout_marginRight="20dp"/>

                <TextView
                    android:id="@+id/shareText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal"
                    android:fontFamily="sans-serif-medium"
                    android:text="Share"
                    android:textColor="@color/darkButtonText" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal"
                    android:text="Convert current presentation to group presentation"
                    android:textColor="@color/darkHelperText"
                    android:textSize="10sp"/>
            </GridLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>