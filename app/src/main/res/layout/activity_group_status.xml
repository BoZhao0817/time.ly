<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/layout1"
        >
        <TextView
            android:id="@+id/presentation_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/lightMainText"
            android:fontFamily="sans-serif-medium"
            android:textSize="18sp"
            android:text="For CS"
            />
        <TextView
            android:id="@+id/total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/section_name"
            android:layout_alignParentRight="true"
            android:text="5:00"
            android:textSize="20sp"
            android:textColor="@color/lightMainText"
            android:fontFamily="sans-serif-medium"
            android:layout_marginRight="10dp"
            android:gravity="right"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout2"
        android:layout_below="@id/layout1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/white"
        android:padding="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/group_glance"
            android:text="Group Status at Glance"
            android:textColor="@color/lightIndicatorText"
            android:fontFamily="sans-serif-medium"
            android:textSize="15dp"
            />
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="20dp"
            android:id="@+id/ll1"
            android:orientation="horizontal"
            android:layout_below="@+id/group_glance"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout2"
        android:id="@+id/layout3"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/white"
        android:padding="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group members"
            android:id="@+id/group_members"
            android:textColor="@color/lightIndicatorText"
            android:fontFamily="sans-serif-medium"
            android:textSize="15dp"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_new_member"
            android:text="ADD NEW MEMBER"
            android:textColor="#F68928"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_toLeftOf="@+id/add_member"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Drag"
            android:text="Drag to Reorder"
            android:textColor="#909090"
            android:textSize="12dp"
            android:layout_alignTop="@+id/add_new_member"
            android:layout_alignBottom="@+id/add_new_member"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-25dp"
            android:layout_marginRight="30dp"
            />
        <Button
            android:id="@+id/add_member"
            android:background="@drawable/icon_add_outline"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:layout_alignTop="@+id/add_new_member"
            android:layout_alignBottom="@+id/add_new_member"/>
        <ListView
            android:id="@+id/userList"
            android:layout_below="@id/add_new_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>